<%= form_for @task, class: "form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class: "form-control", placeholder: "Add a task" %>
  </div>
  <div class="form-group">
    <%= f.text_field :description, class: "form-control", placeholder: "Add a description" %>
  </div>
  <div class="btn-group" role="group">
    <%= f.submit "Change", class: "btn btn-default" %>
    <%= link_to 'Back', root_path, class: "btn btn-default" %>
  </div>
<% end %>
